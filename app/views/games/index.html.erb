<%= render "users/login_form", :user => @user, :errors => @message %>

<%= render "users/signup_form", :user => @user, :errors => @user.errors.full_messages %>

<% if @games %>
  <% if current_user %>
    <%= render "game_list_with_links", :games => @games%>
  <% else %>
    <%= render "game_list_without_links", :games => @games %>
  <% end %>
<% end %>
