<div class="container">
  <%= render 'game_board', :game => @game %>
  <%= image_tag "/assets/grid.png", class: "background-image" %>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    game.init({
      'player_id': '<%= current_user.id %>',
      'player_token': '<%= @game.player_token(current_user.id) %>',
      'move_url': '<%= j game_moves_path(@game) %>',
      'winning_url': '<%= j game_winner_path(@game) %>',
      'polling_url': '<%= j game_path(@game) %>',
      'current_board': '<%= j @game.board %>',
      'x_image': '<%= j image_tag "/assets/X.png", class: "board-icon" %>',
      'o_image': '<%= j image_tag "/assets/O.png", class: "board-icon" %>'
    });
  });
</script>
