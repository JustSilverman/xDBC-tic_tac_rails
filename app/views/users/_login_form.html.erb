<div class="form signin-form">
  <%= form_for user, :url => { :action => 'login', :method => "post", :controller => 'sessions'} do |f| %>

    <p>
      <%= f.text_field :email, :placeholder => 'Email' %>
    </p>
    <p>
      <%= f.password_field :password, :placeholder => 'Password' %>
    </p>

    <p><%= f.submit 'Sign In' %></p>

  <% end %>
</div>
